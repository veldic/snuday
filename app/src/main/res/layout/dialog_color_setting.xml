<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="305dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="40dp"
    android:paddingBottom="25dp"
    android:background="@drawable/frame_snuday_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_font_family"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="@string/schedule_dialog_filter_color" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ic_color_theme_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_color_select"/>

    </LinearLayout>

    <include
        android:id="@+id/layout_color_1"
        layout="@layout/item_color_setting"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <include
        android:id="@+id/layout_color_2"
        layout="@layout/item_color_setting"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <include
        android:id="@+id/layout_color_3"
        layout="@layout/item_color_setting"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <include
        android:id="@+id/layout_color_4"
        layout="@layout/item_color_setting"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <include
        android:id="@+id/layout_color_5"
        layout="@layout/item_color_setting"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <include
        android:id="@+id/layout_color_6"
        layout="@layout/item_color_setting"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <include
        android:id="@+id/layout_color_7"
        layout="@layout/item_color_setting"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <include
        android:id="@+id/layout_color_8"
        layout="@layout/item_color_setting"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <include
        android:id="@+id/layout_color_9"
        layout="@layout/item_color_setting"
        android:layout_width="match_parent"
        android:layout_height="44dp" />


</LinearLayout>