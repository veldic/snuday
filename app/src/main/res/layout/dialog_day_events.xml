<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="305dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="40dp"
    android:background="@drawable/frame_snuday_dialog">

    <TextView
        android:id="@+id/text_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_bold"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="38dp"
        tools:text="14일" />

    <TextView
        android:id="@+id/text_date_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_regular"
        android:textColor="@color/calendar_weekday_gray"
        android:textSize="10dp"
        android:layout_marginStart="38dp"
        tools:text="2021년 1월 14일 (목)" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/snuday_div_line"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="15dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_event"
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="28dp"
        android:paddingHorizontal="10dp"
        tools:listitem="@layout/item_event_in_day"
        android:paddingVertical="15dp"
        android:clipToPadding="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/snuday_div_line"
        android:layout_marginHorizontal="28dp" />

    <ImageView
        android:id="@+id/button_add_my_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_floating_action_button_add"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="22dp"
        android:layout_gravity="end" />


</LinearLayout>